@page "/shop/{ShopName}/{ShopId}"
@using CKSA.Models
@model CKSA.Pages.Catalog.CategoryModel
@{
}

<div id="subMast" class="container">
    <div class="row">
        <nav id="breadCrumb" class="col-xs-12" aria-label="breadcrumb">
            <ul>
                @foreach (var c in Model.CatModel.Breadcrumbs)
                {
                    <li>
                        <a href="@c.Value">@c.Key</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row titleRow">
        <div class="col-xs-12 col-md-12" style="padding-left:0;">
            <h1>@Model.CatModel.H1Tag</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row col-xs-12">
        <p>@Model.CatModel.GeneralDescription</p>
    </div>
</div>

<div class="container category-list">
    @foreach (var c in Model.CatModel.Cats ?? Enumerable.Empty<CategoryItem>())
    {
        <div class="col-12 col-sm-4">
            <div class="card">
                @Html.Raw(c.Img)
                <a href="@c.Url">
                    <h2>@c.C</h2>
                </a>
            </div>
        </div>
    }
</div>